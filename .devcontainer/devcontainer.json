{
  "name": "python-devcontainer-env",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  // -----------------------------
  // Codespace作成後の自動実行
  // -----------------------------
  "postCreateCommand": "pip install -r requirements.txt || pip install playwright && playwright install-deps && playwright install",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscode-icons-team.vscode-icons",
        "sdras.night-owl",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
      ],
      "settings": {
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length", "100"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      }
    }
  },
    // -----------------------------
  // 環境変数など
  // -----------------------------
  "containerEnv": {
    "PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}"
  },

  // -----------------------------
  // Codespacesのメモリ・CPU指定（任意）
  // -----------------------------
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  }
}